<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>

<div class="container mt-5">
    <div class="card" style="background-color: #E2F0D9; border: 2px solid #E2F0D9; border-radius: 20px; box-shadow: 0px 0px 20px #546223; max-width: 1000px; margin: 0 auto; text-align: center;">
       <div class="card-header" style="background-image: linear-gradient(#546223, #546223d5); color: white; border-radius: 15px 15px 0px 0px;" >
        <h1 style="font-size: 30px;">Pacientes</h1>
       </div>
       <div class="card-body">
        <table class="table table-hover">
           <thead>
              <tr>
                <th>id</th>
                <th>nombre</th>
                <th>apellidos</th>
                <th>usuario</th>
                <th>password</th>
                <th>Editar/Borrar</th>
              </tr>
           </thead>
           <tbody>
            
                <% 
                
                pacientes.forEach((paciente)=>{ 
                  
                %>

                 <tr>
                    <td><%= paciente.id %></td>
                    <td><%= paciente.nombre %></td>
                    <td><%= paciente.apellidos %></td>
                    <td><%= paciente.usuario %></td>
                    <td><%= paciente.password %></td>
                    <td>
                     <a href="/editar/<%= paciente.id %>" style="color: blue;" >Editar</a>
                     <a href="/borrar/<%= paciente.id %>" style="color: red;">Borrar</a>
                    </td>
                    
                 </tr>

                 <%

                 });

                %>
                
           </tbody>
        </table>
       </div>
      </div>
       <div class="card-footer">
       </div>
       


